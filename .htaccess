# Safe .htaccess for InfinityFree
RewriteEngine On
RewriteBase /

# Force trailing slash on directories
RewriteCond %{REQUEST_FILENAME} -d
RewriteRule ^(.+[^/])$ /$1/ [R=301,L]

# Prevent directory listing
Options -Indexes

# Standard PHP handling
<FilesMatch "\.php$">
    Order Allow,Deny
    Allow from all
</FilesMatch>
